<html>
  <head>
    <!-- Include meta tag to ensure proper rendering and touch zooming -->
    <link rel="stylesheet" href="/css/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU"
      crossorigin="anonymous"
    />
      <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
  </head>
  <body >

      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <img id="EditBackButton" style="width: 11%;" src="Img/back-icon.jpg">
        <a class="navbar-brand ">Biryani Mahal</a>
       
      </div>
    </nav>
    
      <div class="container">
        
        <img id="HeaderImg" class="img-thumbnail img-fluid" >
      </div>

      <div class="loader"></div>
 

    <div class="FoodItemsMainten">
      <form>
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="EditBiryaniMahalFoodID">Food ID</span>
         
        </div>

        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" for="EditBiryaniMahalFoodName">Food Name</span>
          <textarea
            class="form-control"
            autocomplete="off"
            required
            id="EditBiryaniMahalFoodName"
            name="EditFoodName"
            placeholder="please enter Food Items Name"
          ></textarea>
        </div>

        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" for="EditBiryaniMahalFoodAmount">Food Amount</span>
          <input
            type="text"
            autocomplete="off"
            placeholder="please enter amount"
            id="EditBiryaniMahalFoodAmount"
            name="EditFoodAmount"
            class="form-control"
            required
          />
        </div>

        <div class="input-group input-group-sm mb-3">
          <span
            class="input-group-text"
          
            for="FoodBiryaniMahalDescription"
          >Food Description</span>
          <textarea
            class="form-control"
            autocomplete="off"
            id="foodBiryaniMahalDescription"
            name="FoodDescription"
            placeholder="please enter food description"
             required
          ></textarea>
        </div>
        <div class="container">
  <div class="row">
    <div class="col">
         <div class="d-grid gap-2">
          <button
            class="btn btn-primary"
       
            id="UpdateFood">Update</button>
        </div>
    </div>
   
    <div class="col">
        <div class="d-grid gap-2">
          <button
            class="btn btn-danger"
           
            
            id="DeleteFood">Delete</button>
        </div>
    </div>
  </div>
</div>

      </form>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
      crossorigin="anonymous"
    ></script>
     <script src="/js/BiryaniMahalEditItems.js"></script>
  </body>
</html>